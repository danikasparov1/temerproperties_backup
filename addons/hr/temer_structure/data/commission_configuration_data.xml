        </record>

        <!-- Commission Configuration for Sales Person -->
        <record id="commission_config_sales_person" model="commission.configuration">
            <field name="name">Sales Person Commission</field>
            <field name="sales_type">internal</field>
            <field name="hierarchy_type">sales_person</field>
