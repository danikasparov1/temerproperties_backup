            <field name="sales_type">internal</field>
            <field name="hierarchy_type">wing</field>
            <field name="commission_type">percentage</field>
            <field name="percentage">1.0</field>
        </record>

        <!-- Commission Configuration for Sales Manager -->
        <record id="commission_config_sales_manager" model="commission.configuration">
