    <!-- Property site form view -->
    <record id="property_site_view_form_id" model="ir.ui.view">
        <field name="name">property.site.form</field>
        <field name="model">property.site</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                        options="{'clickable': '1'}"
                        statusbar_visible="draft,active,archived" />

                    <button name="activate_site"
                        string="Active"
                        type="object"
                        class="btn-primary"
                        invisible="state not in ['draft','archived']"
                        confirm="Are you sure you want to activate this site?" />

                    <button name="archive_site"
                        string="Archive"
                        type="object"
                        class="btn-primary"
                        invisible="state not in ['draft','active']"
                        confirm="Are you sure you want to archive this site?" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="country_id" no_create="1" />
                            <field name="city_id" no_create="1"
                                domain="[('country_id', '=', country_id)]" />
                            <field name="sub_city_id" no_create="1"
                                domain="[('city_id', '=', city_id)]" />
                            <field name="wereda" />
                            <field name="house_no" />
                            <field name="area" />
                            <field name="latitude" />
                            <field name="longitude" />
                            <field name="phone" widget="phone" />
                            <field name="email" />
                            <field name="lessee_name" />
                             <field name="finishing" />

                        </group>
                        <group>
                            <field name="floor_structure" />
                            <field name="site_type" />
                            <field name="plot_area" />
                            <field name="car_parking" />
                            <field name="title_deed_no" />
                            <field name="payment_structure_id" invisible="is_multi == True" />
                            <field name="price_per_m2" invisible="is_multi == True" />
                            <field name="leasehold_certificate" widget="binary_preview" />
                            <field name="commercial_certificate" widget="binary_preview" />
                            <field name="taxpayer_certificate" widget="binary_preview" />
                            <field name="is_multi" invisible="1" />
                        </group>
                    </group>
                    <notebook>

                        <page string="Payment Type" invisible="is_multi != True">
                            <field name="payment_line_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="property_type" />
                                    <field name="payment_term_id" no_create="1" />
                                    <field name="price" />
                                </tree>
                            </field>
                        </page>

                        <page string="Property Type">
                            <field name="property_type_lin_ids">
                                <tree editable="bottom">
                                    <field name='property_type_id' />
                                    <field name="number_be_room" />
                                    <field name="number_bath_room" />
                                    <field name="has_maid_room" />
                                    <field name="gross_area" />
                                    <field name="net_area" />
                                    <field name="image" />
                                </tree>
                            </field>
                        </page>
                        <page string="Facilities">
                            <field name="facility_ids">
                                <tree editable="bottom">
                                     <field name='facility_id' />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="o_attachment_preview" />
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>

            </form>
        </field>
    </record>
