                                    <field name="amount_from" widget="percentage" />
                                    <field name="amount_to" widget="percentage" />
                                    <field name="amount" widget="percentage" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>
    
