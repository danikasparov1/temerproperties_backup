<record id="contract_pharase_9" model="contract.template.content">
        <field name="sequence">24</field>
        <field name="main_title">አንቀጽ 9</field>
         <field name="subtitle">ውልን ስለማቋረጥ</field>
        <field name="content">
            <![CDATA[
            <p>
           
