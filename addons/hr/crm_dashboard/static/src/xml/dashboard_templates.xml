<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- User Dashboard Template -->
    <t t-name="crm_dashboard.UserDashboard" owl="1">
        <div class="container p-3">
            <div class="card">
                <div class="card-header">
                    <h3>My Dashboard</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card text-white bg-primary">
                                <div class="card-header">My Leads</div>
                                <div class="card-body">
                                    <h1 class="text-center" t-esc="state.userLeads"/>
                                    <button class="btn btn-light w-100" t-on-click="goToMyLeads">
                                        View My Leads
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-white bg-success">
                                <div class="card-header">My Prospects</div>
                                <div class="card-body">
                                    <h1 class="text-center" t-esc="state.userProspects"/>
                                    <button class="btn btn-light w-100" t-on-click="goToMyProspects">
                                        View My Prospects
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-white bg-info">
                                <div class="card-header">My Activities</div>
                                <div class="card-body">
                                    <h1 class="text-center" t-esc="state.userActivities"/>
                                    <button class="btn btn-light w-100" t-on-click="goToMyActivities">
                                        View My Activities
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <!-- Supervisor Dashboard Template -->
    <t t-name="crm_dashboard.SupervisorDashboard" owl="1">
        <div class="container p-3">
            <div class="card">
                <div class="card-header">
                    <h3>Team Dashboard</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card text-white bg-primary">
                                <div class="card-header">Team Leads</div>
                                <div class="card-body">
                                    <h1 class="text-center" t-esc="state.teamLeads"/>
                                    <button class="btn btn-light w-100" t-on-click="goToTeamLeads">
                                        View Team Leads
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-white bg-success">
                                <div class="card-header">Team Prospects</div>
                                <div class="card-body">
                                    <h1 class="text-center" t-esc="state.teamProspects"/>
                                    <button class="btn btn-light w-100" t-on-click="goToTeamProspects">
                                        View Team Prospects
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-white bg-info">
                                <div class="card-header">Team Activities</div>
                                <div class="card-body">
                                    <h1 class="text-center" t-esc="state.teamActivities"/>
                                    <button class="btn btn-light w-100" t-on-click="goToTeamActivities">
                                        View Team Activities
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>